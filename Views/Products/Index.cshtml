@{
    ViewData["Title"] = "Products";
    var store =  Model.Store != null ? @Model.Store : "Database";
}

@model WirlessMediaSimpleCRUD.ViewsModel.ProductModel

<div class="container">
    <div class="row mb-2">
        <div class="col">
            <h3>Products DB implementation (@store) </h3>
        </div>
        <div class="col">
            <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle float-right" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Switch (store)
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                    <a class="dropdown-item" asp-action="Index" asp-route-store="Database">Database</a>
                    <a class="dropdown-item" asp-action="Index" asp-route-store="JSON">Json</a>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Category</th>
                <th scope="col">Manufacturer</th>
                <th scope="col">Supplier</th>
                <th scope="col">Cost</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in @Model.Products)
            {
                <tr>
                    <th class="align-middle" scope="row">@product.Id</th>
                    <td class="align-middle">@product.Name</td>
                    <td class="align-middle">@product.Description</td>
                    <td class="align-middle">@product.Category</td>
                    <td class="align-middle">@product.Manufacturer</td>
                    <td class="align-middle">@product.Supplier</td>
                    <td class="align-middle">@product.Cost</td>
                    <td class="align-middle">
                        <a type="button" class="btn btn-outline-secondary btn-block" asp-action="Edit" asp-route-id="@product.Id" asp-route-store="@Model.Store">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a type="button" class="btn btn-outline-primary float-right mb-5" asp-action="Create" asp-route-store="@Model.Store">Create</a>
</div>
